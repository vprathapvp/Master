<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordActivity">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@drawable/top_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Reset"
            android:layout_width="210dp"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="60dp"
            android:text="ð‘ðžð¬ðžð­ ððšð¬ð¬ð°ð¨ð«ð"
            android:textColor="#ffffff"
            android:textSize="33sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:src="@drawable/reset"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/textViewgmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Registered Email Address"
        android:textStyle="bold"
        android:layout_below="@+id/l1"
        android:textColor="#2f3363"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>

    <EditText
        android:id="@+id/editTextgmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewgmail"
        android:layout_marginTop="15dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:padding="8dp"
        android:textColor="#a2a4b5"
        android:textStyle="bold"
        android:background="@drawable/edittext"
        android:hint="Enter Your Email Address"
        android:textSize="16sp"
        android:enabled="false"/>

    <TextView
        android:id="@+id/textViewNewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:textStyle="bold"
        android:layout_below="@+id/editTextgmail"
        android:textColor="#2f3363"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>

    <EditText
        android:id="@+id/editTextNewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewNewPassword"
        android:layout_marginTop="15dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:padding="8dp"
        android:textColor="#a2a4b5"
        android:textStyle="bold"
        android:background="@drawable/edittext"
        android:inputType="textPassword"
        android:hint="Enter Your New Password"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/textViewConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:textStyle="bold"
        android:textColor="#2f3363"
        android:textSize="18sp"
        android:layout_below="@id/editTextNewPassword"
        android:layout_marginTop="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>

    <EditText
        android:id="@+id/editTextConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewConfirmPassword"
        android:layout_marginTop="15dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:padding="8dp"
        android:textColor="#a2a4b5"
        android:textStyle="bold"
        android:background="@drawable/edittext"
        android:hint="Confirm Your Password"
        android:textSize="16sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonUpdatePassword"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/editTextConfirmPassword"
        android:layout_marginTop="25dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/background_btn"
        android:layout_marginEnd="32dp"
        android:textStyle="bold"
        android:text="Update Password"/>

</RelativeLayout>
