<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ads.AdUserActivity">
    <TextView
        android:id="@+id/adhead"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="B Y T E S"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="23sp"
        android:gravity="center"
        android:background="@drawable/gradient"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/top_background"
        android:orientation="horizontal"
        android:layout_below="@+id/adhead">


        <TextView
            android:id="@+id/uploads"
            android:layout_width="226dp"
            android:layout_height="100dp"
            android:layout_marginTop="60dp"
            android:paddingLeft="30dp"
            android:text=" Welcome Advertiser"
            android:textColor="#ffffff"
            android:textSize="33sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/advertiser" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/l1"
        android:layout_marginTop="30dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/email_edit_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/edittext"
            android:enabled="false"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/upload_ad_btn"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/background_btn_2"

            android:padding="4dp"
            android:text="Upload Ad"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/youruploads_btn"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/background_btn_2"

            android:padding="4dp"
            android:text="Your uploads"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:textStyle="bold" />


    </LinearLayout>


</RelativeLayout>