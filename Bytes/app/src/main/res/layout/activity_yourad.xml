<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ExtraText"
    tools:context=".ads.YourAdActivity">

    <!-- Your top LinearLayout containing design and women cartoons -->
    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/top_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ads"
            android:layout_width="228dp"
            android:layout_height="100dp"
            android:layout_marginTop="60dp"
            android:paddingLeft="30dp"
            android:text="   𝐘𝐨𝐮𝐫 𝐀𝐝𝐬"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:textStyle="bold"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/ads" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="10dp"
        android:id="@+id/editTextgmail"
        android:layout_below="@id/l1"
        android:textStyle="bold"
        android:padding="8dp"
        android:textSize="20sp"
        android:textColor="#2f3363"
        android:textAlignment="center"/>

    <!-- Your ListView positioned below the top LinearLayout -->
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextgmail"
        android:padding="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>
